{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "maxLength": 255,
      "minLength": 15,
      "required": true
    },
    "summary": {
      "type": "text",
      "maxLength": 1024
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "universe": {
      "type": "enumeration",
      "enum": [
        "yoga",
        "mindfulness",
        "dialogue"
      ],
      "required": false
    },
    "description": {
      "type": "richtext",
      "required": true,
      "minLength": 100
    },
    "startAt": {
      "type": "datetime",
      "required": true
    },
    "endAt": {
      "type": "datetime",
      "required": true
    },
    "flyer": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "videos",
        "files"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "displayTitle": {
      "type": "string",
      "minLength": 10,
      "maxLength": 140
    },
    "location": {
      "type": "string",
      "maxLength": 100,
      "minLength": 3
    },
    "organizers": {
      "type": "string",
      "maxLength": 150,
      "minLength": 3
    },
    "online": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "facebookLink": {
      "type": "string",
      "minLength": 10,
      "maxLength": 255,
      "regex": "https://"
    },
    "programmes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::programme.programme",
      "mappedBy": "events"
    },
    "eventType": {
      "type": "enumeration",
      "enum": [
        "stages-et-retraites",
        "cours-reguliers",
        "programme-et-cycles"
      ],
      "required": true
    }
  }
}
