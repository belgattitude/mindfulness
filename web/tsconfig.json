{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "./src",
    "paths": {
      "@/api/*": [
        "./api/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/config/*": [
        "./config/*"
      ],
      "@/features/*": [
        "./features/*"
      ],
      "@/fonts/*": [
        "./fonts/*"
      ],
      "@/gql/*": [
        "./gql/*"
      ],
      "@/layout/*": [
        "./layout/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/public/*": [
        "../public/*"
      ],
      "@/styles/*": [
        "../styles/*"
      ],
      "@/themes/*": [
        "./themes/*"
      ],
      "@/ui/*": [
        "./ui/*"
      ]
    },
    "types": [
      "vitest/globals"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "**/node_modules",
    ".next",
    "**/.*/*",
    "storybook-static"
  ],
  "include": [
    ".eslintrc.*",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**.*.cjs",
    "**/*.mjs",
    "**/*.json",
    ".next/types/**/*.ts"
  ]
}
